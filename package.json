{
  "name": "markdown-preview-server",
  "version": "1.0.0",
  "description": "A simple markdown preview server with syntax highlighting",
  "main": "dist/index.js",
  "bin": {
    "markdown": "bin/markdown.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/andrelip/mermaid-markdown-render.git"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc && node dist/index.js",
    "watch": "tsc && WATCH_MODE=true node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "prettier:check": "prettier --check .",
    "prettier": "prettier --write .",
    "prepare": "husky"
  },
  "keywords": [
    "markdown",
    "preview",
    "server"
  ],
  "author": "Andr√© Stephano",
  "license": "MIT",
  "dependencies": {
    "chokidar": "^4.0.3",
    "express": "^4.18.2",
    "highlight.js": "^11.9.0",
    "marked": "^11.1.1",
    "mermaid": "^11.12.0",
    "open": "^10.2.0",
    "svg-pan-zoom": "^3.6.2"
  },
  "devDependencies": {
    "@types/chokidar": "^1.7.5",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "@vitest/ui": "^3.1.1",
    "eslint": "^8.57.1",
    "eslint-plugin-import": "^2.31.0",
    "happy-dom": "^15.11.7",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "prettier": "3.5.3",
    "supertest": "^7.0.0",
    "typescript": "^5.3.3",
    "vitest": "^3.1.1"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --fix",
    "*.{js,ts,json,md}": "prettier --write"
  }
}
